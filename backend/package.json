{
  "name": "logic-camp-backend",
  "version": "1.0.0",
  "description": "Logic Camp CRM Backend - MongoDB Database Schema and API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec \"pnpm exec ts-node src/index.ts\"",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:setup": "pnpm exec ts-node src/scripts/setupDatabase.ts",
    "db:setup:drop": "pnpm exec ts-node src/scripts/setupDatabase.ts --drop",
    "db:setup:no-seed": "pnpm exec ts-node src/scripts/setupDatabase.ts --no-seed",
    "admin:create": "pnpm exec ts-node src/scripts/createAdmin.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "crm",
    "mongodb",
    "mongoose",
    "typescript",
    "nodejs",
    "database",
    "schema"
  ],
  "author": "Logic Camp Team",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.20.0",
    "mongoose": "^8.19.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.9.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
